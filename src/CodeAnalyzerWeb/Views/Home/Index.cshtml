@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<section class="hero-section bg-dark text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInUp">
                    Welcome to C# Code Analyzer
                </h1>
                <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                    Elevate your C# code quality with intelligent analysis and real-time feedback
                </p>
                <div class="d-flex gap-3 animate__animated animate__fadeInUp animate__delay-2s">
                    <a href="#" class="btn btn-primary btn-lg px-4 py-3 shadow btn-try">
                        <i class="fas fa-rocket me-2 "></i>Try for Free
                    </a>
                    <a href="#" class="btn btn-outline-light btn-lg px-4 py-3 shadow">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative overflow-hidden rounded-4 shadow-lg animate__animated animate__fadeIn">
                    <img src="https://learn.microsoft.com/en-us/visualstudio/ide/media/vs-2022/sticky-scroll-example-csharp.gif?view=vs-2022" 
                         alt="Code Analysis Preview" 
                         class="img-fluid rounded-4"
                         style="transform: perspective(1000px) rotateX(10deg) rotateY(-5deg);">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-25"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Why Choose Our Analyzer?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-scale">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-primary text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-bolt fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Real-time Analysis</h3>
                        <p class="text-muted">Instant feedback on your C# code with detailed suggestions</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-scale">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-success text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-shield-alt fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Security Focused</h3>
                        <p class="text-muted">Advanced vulnerability detection for safer code</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-scale">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-info text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h3 class="h4 mb-3">Performance Insights</h3>
                        <p class="text-muted">Optimize your code for maximum efficiency</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: rgb(28,28,29);
background: linear-gradient(90deg, rgba(28,28,29,1) 6%, rgba(174,116,221,1) 65%);
color: white;
    }
    
    .hero-section, .features-section {
        width: 100vw;
        margin: 0;
        padding: 0;
        padding: 3rem 15px !important;
    }

    .hover-scale {
        transition: transform 0.3s ease;
    }
    
    .btn-try{
        background-color: #7e1cab !important;
        border: none;
    }

    .hover-scale:hover {
        transform: translateY(-5px);
    }
    
    .icon-wrapper {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .animate__delay-2s {
        animation-delay: 0.5s;
    }

    .container {
        padding-left: 0 !important;
        padding-right: 0 !important;
        max-width: 100% !important;
    }

    .row {
        margin-left: 0;
        margin-right: 0;
    }

    .col-lg-6, .col-md-4, .col-12 {
        padding-left: 0;
        padding-right: 0;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Remove residual padding
        const sections = document.querySelectorAll('section');
        sections.forEach(section => {
            section.style.margin = '0';
            section.style.padding = '0';
        });

        // Force full width
        document.querySelector('.hero-section').classList.add('w-100');
        document.querySelector('.features-section').classList.add('w-100');
    });
</script>